<h1>Test Prep Tracker</h1>

<% if !logged_in? %>
<%= link_to 'Signup', signup_path %>     |     
<%= link_to 'Login', login_path %>
<%= link_to "Login with Google", "/auth/google_oauth2" %>

<% else %>

    <div class="card-deck">
        <div class="card bg-light text-dark">
            <div class="card-body">
            <img class="card-img-top"<%= image_tag "pencils.jpg", class: "fit-image" %>
            <h4 class="card-title"><%=link_to 'Tests', tests_path%></h4>
            <p class="card-text">A list of tests for which you're preparing</p>
            </div>
        </div>

        <div class="card bg-light text-dark">
            <div class="card-body">
            <img class="card-img-top"<%= image_tag "books.jpg", class: "fit-image" %>
            <h4 class="card-title"><%=link_to 'Test Prep Activities', activities_path%></h4>
            <p class="card-text">Activities to help you prepare for your tests</p>
            </div>
        </div>

        <div class="card bg-light text-dark">
            <div class="card-body">
            <img class="card-img-top"<%= image_tag "training.jpg", class: "fit-image" %>
            <h4 class="card-title"><%=link_to 'Trainings', trainings_path%></h4>
            <p class="card-text">Track your training and performance</p>
            </div>
        </div>
    </div>

<% end %>

