<%= form_for @activity do |f| %>

  <%= f.label :name, "Activity Name" %>
  <%= f.select :name, options_for_select(["Flash Cards", "Prep Course", "Tutoring", "Study Guide", "Group Study"]), include_blank: true %>
  <br></br>

  <%= f.label :time_required %>
  <%= f.number_field :time_required, min: 0 %> (in hours)
  <br></br>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br></br>

  <%= f.submit%>

<% end %>