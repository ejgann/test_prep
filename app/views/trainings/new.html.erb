<h1>Record a Training Session</h1>

<%= render partial: "layouts/errors", locals: { object: @training } %>

<%= form_for [@activity,@training] do |f| %>
    <%= f.hidden_field :test_id %>
    <%= f.hidden_field :activity_id %>

    <%= f.label :date %>
    <%= f.date_field :date %>
    
    <br></br>
    
    <%= f.label :notes %>
    <%= f.text_area :notes %>

    <br></br>

    <%= f.label :test_id %>
    <%= f.collection_select :test_id, current_user.tests, :id, :name %>

    <br></br>

    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, current_user.activities, :id, :name %>

    <br></br>

    <%= f.submit %>
    <% end %>