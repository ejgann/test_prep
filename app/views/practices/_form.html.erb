<%= form_for (@practice) do |f| %>

    <%= f.label :date %>
    <%= f.date_field :date %>
    <br></br>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 0, max: 5 %>
    <br></br>
    <%= f.label :comment %>
    <%= f.text_area :comment %>

    <br></br>
    
    <%= f.label :activity_id, "Choose an Activity:" %>
    <%= f.collection_select :activity_id, Activity.all, :id, :name, include_blank: true %>

    <br></br>

    <%= f.submit%>

<% end %>
