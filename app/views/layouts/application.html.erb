<!DOCTYPE html>
<html>
  <head>
    <title>TestPrep</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<% if logged_in? %>
    <nav class='navbar'>
      <%= link_to "Home", root_path %>
      <%= link_to "Tests", tests_path %>
      <%= link_to "Add a Test", new_test_path %>
      <%= link_to "Activities", activities_path %>
      <%= link_to "Add an Activity", new_activity_path %>
      <%= link_to "Practice Sessions", practices_path %>
      <%= link_to "Record a Practice", new_user_practice_path(:user_id) %>
      <%= link_to 'Logout', '/logout', method: :delete %>
    </nav>
    <% else %>
      <%= link_to 'Signup', signup_path %>     |     
      <%= link_to 'Login', login_path %>     |     
      <%= link_to "Login with Google", "/auth/google_oauth2" %>
    <% end %>
<div class='container'>
    <%= yield %>
  </body>
</html>
